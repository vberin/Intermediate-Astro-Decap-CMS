---
// src/layouts/BaseLayout.astro

// Используем ViewTransitions для плавных переходов между страницами
import { ViewTransitions } from "astro:transitions";
import type { GetImageResult } from 'astro';
import client from "@data/client.json";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import DarkModeToggle from "@components/DarkModeToggle.astro";
import ChatWidget from "@components/ChatWidget.astro"; // <-- НАШ НОВЫЙ КОМПОНЕНТ
import "@styles/root.less";
import "@styles/dark.less";

// Типизация для изображений
type ContentImage = {
  src: string;
  width: number;
  height: number;
  format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
};
type PreloadedImage = GetImageResult | ContentImage;

interface Props {
  title: string;
  description: string;
  preloadedImage?: PreloadedImage;
}

const { description, title, preloadedImage } = Astro.props as Props;
---
<!-- Используем всю вашу продвинутую структуру <head> -->
<html lang="en">
    <head>
        <!-- Поддержка View Transitions -->
        <ViewTransitions />

        <!-- Стандартные мета-теги -->
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content={description}>
        <meta name="keywords" content="">
        <link rel="canonical" href={`https://${client.domain}${Astro.url.pathname}`}>

        <!-- Предзагрузка изображений для LCP -->
        {preloadedImage && <link rel="preload" href={preloadedImage.src} as="image" />}

        <!-- Теги для социальных сетей -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={`https://${client.domain}${Astro.url.pathname}`} />
        {
          preloadedImage &&
            <meta property="og:image" content={preloadedImage.src} />
            <meta property="og:image:secure_url" content={preloadedImage.src} />
        }
        
        <!-- Фавиконки -->
        <link rel="apple-touch-icon" sizes="180x180" href="/assets/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicons/favicon-32x32.png?v1">
        <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicons/favicon-16x16.png">
        <link rel="manifest" href="/assets/favicons/site.webmanifest">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
    
        <!-- Динамический заголовок для SEO -->
        <title>
            {Astro.url.pathname === "/" ?
                `${ title } | ${ client.name } | ${ client.address.city }, ${ client.address.state }` :
                `${ title } | ${ client.name }`
            }
        </title>

        <!-- Скрипты -->
        <script src="/src/js/nav.js"></script>
    </head>
    <body>
        <a class="skip" aria-label="skip to main content" href="#main">Click To Skip To Main Content</a>
        
        <Header />
        <DarkModeToggle />
        <main id="main">
            <slot/>
        </main>
        <Footer />

        <!-- ВИДЖЕТ ЧАТА ДОБАВЛЕН ЗДЕСЬ -->
        <ChatWidget />
    </body>
</html>

<!-- Используем ваш надежный скрипт для управления темой -->
<script is:inline>
  function enableDarkMode() {
    document.body.classList.add("dark-mode");
    localStorage.setItem("theme", "dark");
  }

  function disableDarkMode() {
    document.body.classList.remove("dark-mode");
    localStorage.setItem("theme", "light");
  }

  function setTheme() {
    let theme = "light";
    if (localStorage.getItem("theme")) {
      theme = localStorage.getItem("theme");
    } else if (
      window.matchMedia &&
      window.matchMedia("(prefers-color-scheme: dark)").matches
    ) {
      theme = "dark";
    }
    theme === "dark" ? enableDarkMode() : disableDarkMode();
  }

  setTheme();
  
  // Этот слушатель событий важен для View Transitions
  document.addEventListener("astro:after-swap", setTheme);
</script>


---
// src/pages/index.astro
import BaseLayout from "@layouts/BaseLayout.astro";
import { getImage } from "astro:assets";

// Импортируем все наши новые компоненты
import Hero from "@components/Hero.astro";
import SocialProof from "@components/SocialProof.astro";
import ProblemSolution from "@components/ProblemSolution.astro";
import WorkProcess from "@components/WorkProcess.astro";
import FAQ from "@components/FAQ.astro";
import FinalCTA from "@components/FinalCTA.astro";
import SocialShare from "@components/SocialShare.astro";

// Оптимизация изображения для первого экрана
import landingImage from "@assets/images/landing.jpg";
const optimizedImage = await getImage({src: landingImage, format: 'avif'});
---

<BaseLayout
  title="AI-Powered Site Conveyor"
  description="Создаем интеллектуальные веб-приложения для вашего бизнеса."
  preloadedImage={optimizedImage}
>
  <Hero optimizedImage={optimizedImage} />

  <SocialProof />

  <ProblemSolution />
  
  <WorkProcess />

  <FAQ />

  <FinalCTA />
  
  <SocialShare />

</BaseLayout>

